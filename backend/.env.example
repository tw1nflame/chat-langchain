# Minio settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
# CORS настройки (разрешенные домены)

# Example .env for backend (copy to .env and fill in real values)

# Database connection (SQLAlchemy URL). Example using Postgres on localhost with the credentials below.
# Using: user=admin password=admin dbname=n8n host=localhost port=5432
DATABASE_URL=postgresql://admin:admin@localhost:5432/n8n

# Application secret key (used for signing tokens or similar)
SECRET_KEY=your-secret-key-here

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173,http://localhost:4173

# Webhook URL the server will call (optional)
WEBHOOK_URL=http://localhost:5678/webhook/your-webhook-id

# Supabase (optional) - backend will call /auth/v1/user to validate access tokens if SUPABASE_URL is set
SUPABASE_URL=https://your-project.supabase.co

# Optional table name overrides (defaults are safe)
USERS_TABLE=users
CHATS_TABLE=chats
MESSAGES_TABLE=messages
FILES_TABLE=files

# Minio / object storage (optional)
# MINIO_ENDPOINT=http://127.0.0.1:9000
# MINIO_ACCESS_KEY=minio-access-key
# MINIO_SECRET_KEY=minio-secret-key
# MINIO_CLIENT_BUCKET=client-files
# MINIO_ASSETS_BUCKET=assets

# Note: To run locally:
# uvicorn app.main:app --reload --host 0.0.0.0 --port 8001
